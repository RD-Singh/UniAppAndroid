<?xml version="1.0" encoding="utf-8"?>
<!-- Creates the main page where user can sign in or sign up -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradientOne"
    tools:context=".MainFrag">

    <!-- Creates the app logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@id/AdmitMe"
        android:layout_centerHorizontal="true"
        android:src="@drawable/admitme_logo_placeholder" />

    <!-- Creates the name of the app -->
    <TextView
        android:id="@+id/AdmitMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="AdmitMe"
        android:textSize="45dp" />

    <!-- Goes to the login page when clicked -->
    <Button
        android:id="@+id/sign_in"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@id/AdmitMe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:text="Sign In"
        android:textColor="@color/gradientOne" />

    <!-- Goes to the sign up page when clicked -->
    <Button
        android:id="@+id/sign_up"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@id/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_round"
        android:text="Sign Up"
        android:textColor="@color/gradientOne" />

</RelativeLayout>