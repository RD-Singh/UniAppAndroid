<?xml version="1.0" encoding="utf-8"?><!-- Creates the main page where user can sign in or sign up -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginRegister.MainFrag">

    <!-- Creates the app logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_above="@id/AdmitU"
        android:layout_centerHorizontal="true"
        android:src="@drawable/admitu_logo_placeholder" />

    <!-- Creates the name of the app -->
    <TextView
        android:id="@+id/AdmitU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/app_name"
        android:textColor="@color/appTextColour"
        android:textSize="50sp" />

    <!-- Goes to the login page when clicked -->
    <Button
        android:id="@+id/sign_in"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_below="@id/AdmitU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/open_sans_bold"
        android:text="LogIn"
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColour"
        android:textSize="16sp"/>

    <!-- Goes to the sign up page when clicked -->
    <Button
        android:id="@+id/sign_up"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_below="@id/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/buttonTextColour"
        android:textSize="16sp" />

</RelativeLayout>