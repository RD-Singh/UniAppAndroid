<?xml version="1.0" encoding="utf-8"?>
<!-- Creates the university item which goes in the university recycler view -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/university_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <!-- Contains the content in the university item -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Creates the university name field for the recycler view item -->
        <TextView
            android:id="@+id/university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="University Name"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptance_rate"
            android:text="AR"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/bookmark_image"
            android:layout_centerVertical="true"/>

        <!-- Creates the location field for the recycler view item -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/university_name"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Location"
            android:textSize="20sp" />

        <!-- Create the bookmark image in the recycler view item -->
        <ImageView
            android:id="@+id/bookmark_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_bookmark_not_filled" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>